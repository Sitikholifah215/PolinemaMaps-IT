<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_utama"
    tools:context=".MainActivity_ruangan">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="166dp"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/meja"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/desk" />

    <TextView
        android:id="@+id/DaftarRuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:textColor="#FFF"
        android:text="Daftar Ruangan"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/cari_ruangan"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_above="@+id/rv_main"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="-166dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Pencarian Ruangan"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/cari_ruangan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@android:drawable/ic_search_category_default" />


</RelativeLayout>