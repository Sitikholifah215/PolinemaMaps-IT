<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_utama"
    tools:context=".MainActivity_Home">

    <ImageView
        android:id="@+id/icUser"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:alpha="0.5"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/idNamaUser"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icUser"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="42dp"
        android:gravity="center"
        android:text="#NamaUser"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewRuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Ruangan Apa yang Kamu Cari ?"
        android:textColor="#fff"
        android:textSize="15dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerviewhorizontalSlide"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="135dp"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        app:columnCount="3"
        app:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/menu_chat"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:background="#00227A"
                app:layout_columnWeight="1"
                android:layout_gravity="center"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="89dp"
                    android:layout_height="63dp">

                    <ImageView
                        android:id="@+id/img_menu_chat"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/chat" />

                </RelativeLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/menu_gedung"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:background="#00227A"
            android:layout_gravity="center"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_menu_gedung"
                    android:layout_width="74dp"
                    android:layout_height="43dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/skyline" />

            </RelativeLayout>
        </FrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/menu_ruangan"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="84dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:background="#00227A"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_menu_ruangan"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/desk" />

                </RelativeLayout>
            </FrameLayout>

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.GridLayout>

</RelativeLayout>